extends layout

block content
	if posts
		each post, i in posts
			.post
				h1
					a(href='/posts/show/#{post._id}') =post.title
				p.meta Posted in #{post.category} by #{post.author}
				on #{moment(post.date).format('MM-DD-YYYY')}
				img(src='/uploads/#{post.mainimage}')
				!=truncated(post.body, 300)
				a.more(href='/posts/show/#{post._id') Read More
	else
		p.noposts There are no posts to display
